{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
